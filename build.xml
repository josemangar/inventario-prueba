<?xml version="1.0" encoding="UTF-8"?>
<project name="programa_prueba" default="default" basedir=".">
    <description>Builds, tests, and runs the project programa_prueba.</description>

    <!-- Importa las reglas por defecto del proyecto NetBeans -->
    <import file="nbproject/build-impl.xml"/>

    <!-- === CONFIGURACIÃ“N DE TAREA DE TEST === -->
    <target name="test" depends="compile">
        <mkdir dir="build/test/results"/>
        <junit printsummary="true" haltonfailure="false">
            <classpath>
                <pathelement path="${build.classes.dir}"/>
                <pathelement path="test/classes"/>
                <fileset dir="lib">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
            <batchtest todir="build/test/results">
                <fileset dir="test">
                    <include name="**/*Test.java"/>
                    <include name="**/Prueba*.java"/>
                </fileset>
            </batchtest>
            <formatter type="plain" usefile="false"/>
            <formatter type="xml"/>
        </junit>
    </target>
</project>
